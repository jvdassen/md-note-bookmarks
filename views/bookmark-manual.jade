extends layout

block content
  nav.navbar.navbar-inverse.navbar-fixed-top
    .container-fluid
      .navbar-header
        a.navbar-brand.m-spacing(href='/bookmarks') BOOKMARKS
      ul.nav.navbar-nav
        li
          a(href='/bookmarks') ALL
        li.active
          a(href='/bookmarks/add') ADD
        li
          a(href='#')#delete-btn DELETE
        li
          a(href='#')#edit-btn EDIT
        li
          a(href='#') TAGS
  .container
    form
      .form-group
        label(for='url') URL:
        input#url.form-control(type='text')
      .form-group
        label(for='usr') Title:
        input#usr.form-control(type='text')
      .form-group
        label(for='comment') Description:
        textarea#comment.form-control(rows='5')

    button#bookmark-submit-manual.btn.btn-primary.btn-block Submit
